        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "412": {
            "description": "Precondition Failed"
          }
        }
      },
      "delete": {
        "tags": [
          "Champion"
        ],
